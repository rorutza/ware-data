                    $("input").change(function () {
                        udata.uid = this.name;
                        udata.uvalue = this.value;
                        if (console.log) {
                            console.log(udata.uid + ' ' + udata.uvalue);
                        }
                        var dt = $("#" + udata.uid);
                        var dd = dt.next();
                        if (dd.is("dd")) {
                            dd.remove();
                        }
                        dt.after($("<dd itemprop=\"" + udata.uid + "\">" + udata.uvalue + "</dd>"));
                        //   var a = obtenir(udate.uid);
                    });

